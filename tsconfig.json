{
  "compilerOptions": {
    "target": "es2020",                                 
    "module": "ESNext",                                
    "esModuleInterop": true,                                              
    "forceConsistentCasingInFileNames": true, 
    "noImplicitAny": true,    
    "noUnusedLocals": true,   
    "noUnusedParameters": true,  
    "moduleResolution":"node",
    "types": ["vite/client", "mocha", "node"],
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,                                     
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": [
		"src/**/*",
		"src/**/*.spec.ts",
		"types.d.ts",
		"server.js"
	],
  "exclude": ["node_modules", "dist/**/*", "./mochaSetup.js"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}

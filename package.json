    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "node": "^20.9.0",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=16"
  }
